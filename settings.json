{
  "editor.fontFamily": "monolisa",
  "editor.fontSize": 15,
  "editor.fontLigatures": "'liga' on, 'zero' on, 'ss03' on, 'ss10' on, 'ss09' on",
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.occurrencesHighlight": false,
  "editor.hover.delay": 1000,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "workbench.colorCustomizations": {
    "sideBarSectionHeader.border": "#f0e3f70c",
    "sideBarTitle.foreground": "#6272A4",
    "activityBar.foreground": "#6272A4",
    "input.border": "#f0e3f70c",
    "panelInput.border": "#f0e3f70c",
    "list.inactiveSelectionBackground": "#282a36",
    "list.activeSelectionBackground": "#282a36",
    "sideBar.foreground": "#6272A4",
    "list.activeSelectionForeground": "#f8f8f2",
    "list.inactiveSelectionForeground": "#f8f8f2",
    "editorBracketMatch.border": "#6272A4",
    "editorGroupHeader.tabsBackground": "#282a36"
  },
  // "editor.formatOnSave": true,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "constant.character.escape.js",
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": [],
        "settings": {
          "foreground": "#FF0000"
        }
      },
      {
        "scope": [
          "punctuation.terminator.statement.js",
        ],
        "settings": {
          "foreground": "#F1FA8C"
        }
      }
    ]
  },
  "eslint.format.enable": true,
  "git.enableSmartCommit": true,
  "editor.tabSize": 2,
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "editor.selectionHighlight": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "smooth",
  "editor.cursorStyle": "block",
  "editor.minimap.enabled": false,
  "remoteHub.commitDirectlyWarning": "off",
  "git.confirmSync": false,
  "workbench.colorTheme": "Mucula",
  "editor.glyphMargin": false
}